{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@db/db": [
        "libs/db/src"
      ],
      "@db/db/*": [
        "libs/db/src/*"
      ],
      "@common/common": [
        "libs/common/src"
      ],
      "@common/common/*": [
        "libs/common/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}